<Page x:Class="Dinesh_Project.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dg="clr-namespace:Microsoft.Windows.Controls;assembly=WpfToolkit"
      mc:Ignorable="d" Title="Reports" d:DesignHeight="300" d:DesignWidth="300">
    
     <Grid>
        <Image Source="Data/ReportsFormsLinksHeader.png" Height="90px"  VerticalAlignment="Top" HorizontalAlignment="Stretch"  Stretch="Fill"/>
        <TabControl TabStripPlacement="Left" HorizontalAlignment="Stretch" Margin="0,90,0,0" MaxWidth="1500">
            <TabItem Name="tabTechnician" Header="Technician" Background="Aqua">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" MaxWidth="900">
                        <StackPanel Orientation="Horizontal"  VerticalAlignment="Center" >
                        <Label Name="lblTechID" Content="Technician" Height="30" FontSize="18" FontStretch="ExtraExpanded"  MaxWidth="200" Width="100"  />
                            <TextBox Name="txtTechName"  MinWidth="150" MaxWidth="200" Height="30"  FontSize="18"/>
                        <Label Content="      " />
                        <Label Name="lblRegistrationNumber" Content="Registration No" MaxWidth="200" Height="35" FontSize="18" VerticalAlignment="Center"/>
                        <TextBox Name="txttechRegistrationId" MinWidth="150" MaxWidth="200" Height="30" FontSize="18"  />
                    </StackPanel>
                    
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="btnSave" Content="Save" FontSize="18"  Margin="-100,30,0,0" MaxWidth="150" MaxHeight="50" />
                        <Label Name="dummy1" Content="" Height="30" FontSize="18" FontStretch="ExtraExpanded"  MaxWidth="200" Width="100"  />
                        <Label Content="      " />
                        <Label Name="dummy2" Content="" MaxWidth="200" Height="35" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <DataGrid HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center" Margin="-120,30,0,0" AutoGenerateColumns="False" x:Name="grdTechData" CanUserAddRows="False">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="LightGreen" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="*"  MaxWidth="150" Binding="{Binding Path=Name}" >
                                <DataGridColumn.HeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="FontSize" Value="20" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="BorderBrush" Value="blue"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,0"/>

                                    </Style>
                                </DataGridColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="RegistrationID" Width="*" MaxWidth="200" Binding="{Binding Path=RegistrationID}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="tab2"></TabItem>
        </TabControl>
        
    </Grid>
</Page>
